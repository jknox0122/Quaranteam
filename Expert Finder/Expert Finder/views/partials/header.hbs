Search

<select name="category" id="main_category" onchange="showSkills('main')">
    {{#each category}}
    <option value='{{id}}'>{{name}}</option>
    {{/each}}
</select>

<select name="skills" id="main_skills">
    {{#each skill}}
    <option value='{{id}}'>{{name}}</option>
    {{/each}}
</select>

<select hidden name="industry" id="main_industry">
    {{#each industry}}
    <option value='{{id}}'>{{name}}</option>
    {{/each}}
</select>

<select hidden name="course" id="main_course">
    {{#each course}}
    <option value='{{id}}'>{{name}}</option>
    {{/each}}
</select>


<button type="button" onclick="searchSkills('main');" class="table-details tooltip">
    <span class="tooltip-text">Search</span>
</button>
