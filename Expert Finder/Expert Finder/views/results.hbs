<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="/public/style.css" rel="stylesheet">
<h2>Results</h2>
{{#if experts.length}}
<table class="results-table">
    <thead>
        <tr>
            <th hidden>ExpertID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Github</th>
            <th>About</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each experts}}
        <tr>
            <td hidden>{{ExpertID}}</td>
            <td width=25%><a href='/experts/view/{{ExpertID}}'>{{FirstName}} {{LastName}}</a></td>
            <td width=23%>{{ProfileEmail}}</td>
            <td width=7%><a href="http://github.com/{{GithubLink}}" class="fa fa-github"></a></td>
            <td width=40%>{{About}}</td>
            <td width=5%>
                <button type="button" onclick="window.location.href='/experts/view/{{ExpertID}}';" class="table-details tooltip">
                    <span class="tooltip-text">View profile</span>
                </button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<h4>No experts found, try again?</h4>
<a href='/search'><button>Return to Search</button></a>
{{/if}}
