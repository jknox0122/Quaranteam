<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="/public/style.css" rel="stylesheet">
<section>

    {{#if expert.length}}
        <table class="results-table">
            <thead>
                <tr>
                    <th hidden>ExpertID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Github</th>
                    <th>About</th>
                    <th>Profile Link</th>
                </tr>
            </thead>
            <tbody>
            {{#each expert}}
                <tr>
                    <td hidden>{{ExpertID}}</td>
                    <td><a href='/experts/view/{{ExpertID}}'>{{FirstName}} {{LastName}}</a></td>
                    <td>{{ProfileEmail}}</td>
                    <td><a href="http://github.com/{{GithubLink}}" class="fa fa-github"></a></td>
                    <td>{{About}}</td>
                    <td>
                        <button type="button" onclick="window.location.href='/experts/view/{{ExpertID}}';" class="table-details tooltip">
                            <span class="tooltip-text">View profile</span>
                        </button>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    {{else}}
        <p>No experts included.</p>
    {{/if}}
</section>
